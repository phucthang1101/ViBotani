@model IEnumerable<ViBotani.Models.News>
@{
    ViewBag.Title = "Post";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    var Post = ViewBag.Post;
}

<div class="row m-0 bg-s p-5">
    <div class="col-lg-9 col-md-12 shadow-s bg--s layout__write">

        <h1 class="title my-4">@Html.Raw(Post.Name)</h1>
        @Html.Raw(Post.Detail)
        <p class="subtitle text-right">
           @Post.CreatedBy
        </p>
    </div>

    <div class="col-lg-3 col-md-12">
        <div class="row m-0">
         
            @{
                var count = 0;
                for (int i = 0; i < Model.Count() - 1; i++)
                {
                    var item = Model.ElementAtOrDefault(i);
                    var url = "/chi-tiet-tin-tuc" + "/" + item.MetaTitle + "/" + item.ID;
                    if (item.Category == "Gắn kết cộng đồng" && count < 2)
                    {
                        if (count == 0)
                        {
                            <h3 class="text-green-s px-2">Gắn kết cộng đồng</h3>
                        }
                        count = count + 1;
                            <div class="col-sm-12 col-md-6 col-lg-12">
                               
                                   
                                    <a href="@url">
                                        <img class="w-100" src="@item.Image" />
                                    </a>
                                    <a href="@url">
                                        <h5 class="text-green-s"><b>@Html.Raw(item.Name)</b></h5>
                                    </a>

                                    <p class="text-green">@Html.Raw(item.Description)</p>
                                    <small class="pb-4">
                                        <i class="fa fa-clock"></i> @Html.Raw(item.CreatedDate)
                                    </small>
                                </div>
                                
                            
                    }
                }
            }
        </div>
    </div>

</div>
