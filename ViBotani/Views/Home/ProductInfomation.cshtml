@model IEnumerable<string>
@{
    ViewBag.Title = "ProductInfomation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    var Product = ViewBag.Product;
    var Data = ViewBag.Data;
}
<head>
    <link rel="stylesheet" href="~/Content/OwlCarousel2-2.3.4/dist/assets/carouselProduct.css" />
</head>

<section>
    <div class="row align-items-md m-0 bg-s">
        <div class="col-md-5 mt-3 col-sm-12">
            <img class="w-100 mb-3 image-main" src="@Product.Image_Main" />

            <div class="owl-carousel owl-theme p-2" id="product-detail-carousel">
                @{
                    int count = 0;
                    foreach (var item in Model)
                    {
                        <div class="item">
                            <img class="image-@count" src="@item" />

                        </div>
                        count++;
                    }
                }

            </div>
        </div>


        <div class="col-md-7 col-sm-12 pl-3 pr-5">
            <div class="col-12 col-md-8 mx-auto">
                <img class="w-100" src="~/Content/Image/Logo/Logo_BiOshi.png" />
            </div>
            <h3 class="text-green text-center title" style="font-weight:bold;">@Product.Heading</h3>
            <h5 class="text-center text-green-s sub-title"><i>@Product.Name</i></h5>
            <h5 class="text-green-s" style="font-weight:bold">
                @Html.Raw(Product.Detail)
            </h5>

            <div class="text-center pb-3">
                <button data-toggle="modal" data-target="#modal-agency-condition" class="btn text-green bg-s  border-1">Đăng ký làm đại lý của ViBotani</button>
            </div>
        </div>







    </div>
</section>
<div class="container-fluid">

    <h3 class="text-green text-center title" style="font-weight:bold;">Sản phẩm liên quan</h3>
    <div class="row align-items-md m-0 bg-s">


        <!--1-->
        @{
            int count1 = 0;
            foreach (var item in Data)
            {
                var url = "/san-pham-trang-da/" + item.Meta_Kindof + "/" + item.MetaTitle + "/" + item.ID;

                if (count1 == 4) { break; }

                <div class="col-lg-3 col-md-6 col-sm-12 text-center p-2 pt-4">
                    <div class="image-container">
                        <a class="product-link " href="@url">

                            <img class="image " style="height:100%;width:auto;" src="@item.Image_Outside" />;

                        </a>
                    </div>
                    <h5 class="text-center text-green">
                        <a class="product-link text-green" href="@url">
                            <b>@item.Name</b>
                        </a>
                    </h5>

                    <p class="text-green-s">@item.Description </p>

                </div>
                count1++;
            }
        }

        <!--here-->


    </div>
</div>


